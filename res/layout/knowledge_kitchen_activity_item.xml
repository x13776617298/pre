<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/kitchen_layout_other"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/layout_selector_background"
                android:orientation="horizontal"
                android:paddingTop="30dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="110dip"
                    android:orientation="vertical"
                    android:paddingTop="15dip" >

                    <TextView
                        android:id="@+id/text_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_today"
                        android:gravity="center|left"
                        android:text="今天"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="66dip"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="4dip" >

                        <TextView
                            android:id="@+id/text_yuchanqi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="离预产期还有183天"
                            android:textColor="@color/red"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/text_pregnancy_week"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff9999"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/text_pregnancy_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff9999"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/click_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/layout_selector_background"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:textColor="#499fae" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txt_content"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:maxLines="5"
                            android:paddingLeft="4dip"
                            android:textColor="#5a5858" />

                        <ImageView
                            android:id="@+id/ic_arrow"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="4"
                            android:background="#00000000"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_arrow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/driver" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kitchen_layout_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" >

            <TextView
                android:id="@+id/kitchen_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/section_bar_bkg"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>