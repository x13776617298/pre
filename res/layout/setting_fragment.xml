<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/c_home_background" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_frame_setting"
            android:orientation="vertical"
            android:padding="1dip" >

            <!-- 预产期修改 -->

            <LinearLayout
                android:id="@+id/layout_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/txt_pre_or_birth_edit"
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_setting_pregnancy_edit"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_pregnancy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dip"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" >
            </LinearLayout>
            <!-- 关爱提醒通知 -->

            <LinearLayout
                android:id="@+id/layout_topic_set"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_setting_tip_notify"
                    android:textColor="@color/black" >
                </TextView>

                <TextView
                    android:id="@+id/setting_topic_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dip"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_notification_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:orientation="vertical" >
            </LinearLayout>
            <!-- 提醒设置 -->

            <LinearLayout
                android:id="@+id/layout_notification"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_setting_tip_setting"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>
        </LinearLayout>

        <!-- 邀请准爸爸 -->

        <LinearLayout
            android:id="@+id/layout_invite_side"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_frame_setting"
            android:orientation="vertical"
            android:padding="1dip" >

            <LinearLayout
                android:id="@+id/layout_invite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/y_layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_invite_father"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_change_2_daddy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_setting_role_select"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>
        </LinearLayout>

        <!-- 调节亮度-护眼模式 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_frame_setting"
            android:orientation="vertical"
            android:padding="1dip" >

            <LinearLayout
                android:id="@+id/layout_eyes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/y_layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_setting_eye_mode"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>
        </LinearLayout>

        <!-- 访问宝宝树网站 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_frame_setting"
            android:orientation="vertical"
            android:padding="1dip" >

            <LinearLayout
                android:id="@+id/layout_visitbabytree"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/y_layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_setting_babytree_visit"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>
        </LinearLayout>

        <!-- 切换到育儿版本 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_frame_setting"
            android:orientation="vertical"
            android:padding="1dip" >

            <LinearLayout
                android:id="@+id/layout_change_app"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/txt_change_app"
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_setting_switfh_2_yuer"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="@drawable/bg_frame_setting"
            android:orientation="vertical"
            android:padding="1dip" >

            <!-- 分享好友 -->

            <LinearLayout
                android:id="@+id/layout_share"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_setting_share"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" >
            </LinearLayout>
            <!-- 建议反馈 -->

            <LinearLayout
                android:id="@+id/layout_feedback"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_setting_fb"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" >
            </LinearLayout>
            <!-- 更多应用 -->

            <LinearLayout
                android:id="@+id/layout_more"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_setting_more_app"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" >
            </LinearLayout>

            <!-- 检测更新 -->

            <LinearLayout
                android:id="@+id/layout_check_update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_setting_update"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" >
            </LinearLayout>

            <!-- 关于我们 -->

            <LinearLayout
                android:id="@+id/layout_about"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_setting_about"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dip"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>
        </LinearLayout>

        <!-- 登录/注销 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_frame_setting"
            android:orientation="vertical"
            android:padding="1dip" >

            <LinearLayout
                android:id="@+id/layout_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_selector_background"
                android:gravity="center"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/txt_login_msg"
                    style="@style/mine_msg"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/s_setting_un_login"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dip"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>