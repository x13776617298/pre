<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/topic_content_bg_color"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="6dip"
    android:paddingRight="6dip" >

    <com.babytree.apps.comm.view.EmojiTextView
        android:id="@+id/topic_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:lineSpacingExtra="@dimen/topic_content_line_spacing"
        android:lineSpacingMultiplier="1"
        android:textColor="@color/topic_title_color"
        android:textSize="@dimen/topic_content_text_size"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/topic_img_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"/>

</LinearLayout>