<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/hospital_area_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top" >

        <TextView
            android:id="@+id/hospital_information_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hospital_area_title_background"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:paddingRight="4.0dip"
            android:textColor="@color/button_color"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hospital_information_layout_other"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hospital_list"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/hospital_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:src="@drawable/hospital" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/hospital_icon"
                android:layout_toLeftOf="@+id/img_arrow"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true" 
                android:textColor="@color/button_color"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrow" />
    </RelativeLayout>

</LinearLayout>