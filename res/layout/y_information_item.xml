<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/information_layout_other"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/y_list_selector_background"
            android:orientation="vertical"
            android:paddingTop="30dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="15dip" >

                    <TextView
                        android:id="@+id/text_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/y_icon_today"
                        android:text="今天"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="66dip"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="4dip" >

                        <TextView
                            android:id="@+id/text_yuchanqi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="离预产期还有183天"
                            android:textColor="@color/red"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/text_pregnancy_week"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff9999"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/text_pregnancy_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff9999"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
				
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dip">
					<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" 
					    android:background="@drawable/y_layout_selector_background" android:id="@+id/layout_pressed">
					    <LinearLayout  android:layout_width="210dip" android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#499fae"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_subtitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/layout_know"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                    	android:paddingBottom="15dip"
                        android:visibility="gone" >

                        <LinearLayout
                            android:layout_width="210dip"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/content_image"
                                android:layout_width="60dip"
                                android:layout_height="61dip"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/txt_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="5"
                                android:textColor="#5a5858" 
                                android:paddingLeft="4dip" android:textSize="12sp"/>
                        </LinearLayout>

                        
                    </LinearLayout></LinearLayout>
                    <ImageView
                            android:id="@+id/ic_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:background="#00000000"
                            android:contentDescription="@string/app_name"
                            android:paddingLeft="14.4dip"
                            android:paddingRight="7.2dip"
                            android:src="@drawable/ic_arrow" />
					</LinearLayout>
					
					  <ImageView
                        android:id="@+id/line0"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/y_line_bkg"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll0"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:paddingTop="15dip"
                        android:paddingBottom="15dip" android:background="@drawable/y_layout_selector_background">

                        <CheckBox
                            android:id="@+id/layout_remind_checkbox0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/y_information_checkbox_selector"
                            android:button="@null"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                        <TextView
                            android:id="@+id/layout_remind_textview0"
                            android:layout_width="190dip"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10.4dip"
                            android:textColor="#499fae" />

                        <ImageView
                            android:id="@+id/ic_arrow_bottom0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:background="#00000000"
                            android:clickable="true"
                            android:contentDescription="@string/app_name"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:paddingRight="7.2dip"
                            android:src="@drawable/ic_arrow" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/line1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/y_line_bkg"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" android:background="@drawable/y_layout_selector_background">

                        <CheckBox
                            android:id="@+id/layout_remind_checkbox1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/y_information_checkbox_selector"
                            android:button="@null"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                        <TextView
                            android:id="@+id/layout_remind_textview1"
                            android:layout_width="190dip"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10.4dip"
                            android:textColor="#499fae" />

                        <ImageView
                            android:id="@+id/ic_arrow_bottom1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:background="#00000000"
                            android:clickable="true"
                            android:contentDescription="@string/app_name"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:paddingRight="7.2dip"
                            android:src="@drawable/ic_arrow" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/line2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/y_line_bkg"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" android:background="@drawable/y_layout_selector_background">

                        <CheckBox
                            android:id="@+id/layout_remind_checkbox2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/y_information_checkbox_selector"
                            android:button="@null"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                        <TextView
                            android:id="@+id/layout_remind_textview2"
                            android:layout_width="190dip"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10.4dip"
                            android:textColor="#499fae" />

                        <ImageView
                            android:id="@+id/ic_arrow_bottom2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:background="#00000000"
                            android:clickable="true"
                            android:contentDescription="@string/app_name"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:paddingRight="7.2dip"
                            android:src="@drawable/ic_arrow" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/topic_line0"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/y_line_bkg"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/topic0"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:paddingTop="15dip"
                        android:paddingBottom="15dip" android:background="@drawable/y_layout_selector_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_community"/>

                        <TextView
                            android:id="@+id/layout_topic_textview0"
                            android:layout_width="180dip"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10.4dip"
                            android:textColor="#499fae"
                            android:layout_gravity="center_vertical" />

                        <ImageView
                            android:id="@+id/ic_arrow_bottom_topic0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:background="#00000000"
                            android:clickable="true"
                            android:contentDescription="@string/app_name"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:paddingRight="7.2dip"
                            android:src="@drawable/ic_arrow" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/topic_line1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/y_line_bkg"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/topic1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:paddingTop="15dip"
                        android:paddingBottom="15dip" android:background="@drawable/y_layout_selector_background">

                        <ImageView
                            android:src="@drawable/icon_community"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/layout_topic_textview1"
                            android:layout_width="180dip"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10.4dip"
                            android:textColor="#499fae" />

                        <ImageView
                            android:id="@+id/ic_arrow_bottom_topic1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:background="#00000000"
                            android:clickable="true"
                            android:contentDescription="@string/app_name"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:paddingRight="7.2dip"
                            android:src="@drawable/ic_arrow" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/topic_line2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/y_line_bkg"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/topic2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:paddingTop="15dip"
                        android:paddingBottom="15dip" android:background="@drawable/y_layout_selector_background">

                        <ImageView
                            android:src="@drawable/icon_community"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/layout_topic_textview2"
                            android:layout_width="180dip"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10.4dip"
                            android:textColor="#499fae" />

                        <ImageView
                            android:id="@+id/ic_arrow_bottom_topic2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:background="#00000000"
                            android:clickable="true"
                            android:contentDescription="@string/app_name"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:paddingRight="7.2dip"
                            android:src="@drawable/ic_arrow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/y_driver" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/information_layout_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" >

            <TextView
                android:id="@+id/information_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/y_section_bar_bkg"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>